#!/bin/bash

if [ ! -f $AIRFLOW_HOME/dags ]; then
  cd $AIRFLOW_HOME && ln -s /root/pipeline/scheduler.ml/airflow/dags 
fi

/usr/local/bin/dockerd

# Start Airflow
mysql --host=mysql-master --port=3306 --user=root --password=password -e "CREATE DATABASE IF NOT EXISTS airflow"
sleep 3

airflow initdb
sleep 3

/root/github_webhook &

airflow flower &

airflow webserver &

airflow worker &

airflow scheduler 
